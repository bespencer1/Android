<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleWiFi"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WiFi is disabled"
        android:id="@+id/textWiFi"
        android:layout_alignTop="@+id/toggleWiFi"
        android:layout_toEndOf="@+id/toggleWiFi"
        android:layout_alignBottom="@+id/toggleWiFi"
        android:gravity="center_vertical" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleBluetooth"
        android:layout_below="@+id/toggleWiFi"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bluetooth i is disabled"
        android:id="@+id/textBluetooth"
        android:layout_below="@+id/textWiFi"
        android:layout_alignStart="@+id/textWiFi"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/toggleBluetooth" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleGPS"
        android:layout_below="@+id/toggleBluetooth"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GPS is enabled"
        android:id="@+id/textGPS"
        android:layout_alignTop="@+id/toggleGPS"
        android:layout_alignStart="@+id/textBluetooth"
        android:layout_above="@+id/textLat"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lat: 00.00000"
        android:id="@+id/textLat"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toggleGPS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lon: 00.00000"
        android:id="@+id/textLon"
        android:layout_below="@+id/textLat"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speed: 0 meters/sec"
        android:id="@+id/textSpeed"
        android:layout_below="@+id/textLon"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alt: 000"
        android:id="@+id/textAlt"
        android:layout_below="@+id/textSpeed"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Connected to: ACCESS POINT"
        android:id="@+id/textWiFiAP"
        android:layout_below="@+id/textAlt"
        android:layout_alignParentStart="true" />

</RelativeLayout>
